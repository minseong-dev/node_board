<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Board</title>
</head>
<body>

  <h1>게시판</h1>

    <table border="1">
      <thead>
        <tr>
          <td>#</td>
          <td>제목</td>
          <td>글쓴이</td>
        </tr>
      </thead>

      <tbody>
      <% for(let post of posts){ %>
        <tr>
          <td><a href="/posts/<%= post.post_uid %>"><%= posts.indexOf(post) + 1 %></a></td>
          <td><%= post.post_title %></td>
          <td><%= post.post_writer %></td>
        </tr>

      <%}%>
      </tbody>
    </table>

    <br>
    <button onclick="location.href='/write'">글 쓰기</button>

</body>
</html>